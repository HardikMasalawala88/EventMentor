                            <MudTh>Service</MudTh>
                            <MudTh>Status</MudTh>
                            <MudTh></MudTh>
                        </HeaderContent>
                        <RowTemplate Context="data">

                            <MudTd DataLabel="Id">@data.Event.EventName</MudTd>
