<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="https://media-exp1.licdn.com/dms/image/C4D03AQGNO7uV7fRi7Q/profile-displayphoto-shrink_200_200/0/1531753989819?e=1614816000&v=beta&t=t2IEQlTyem3aFB1sQXFHrDGt0yMsNkPu7jDmMPoEbLg" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@UserName</MudText>
            <MudText Typo="Typo.caption">@UserRole</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {
    /// <summary>
    /// Logged in user name 
    /// </summary>
    [Parameter] public string UserName { get; set; }
    /// <summary>
    /// Logged in user role 
    /// </summary>
    [Parameter] public string UserRole { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}